generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Alert {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  originID    String?
  name        String
  level       Int      @default(0)
  description String
  archived    Boolean  @default(false)
  createdAt   DateTime @unique @default(now())
}